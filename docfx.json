{
    "build": {
        "content": [
            {
                "files": [
                    "doc/api/**.yml",
                    "doc/api/index.md"
                ]
            },
            {
                "files": [
                    "doc/articles/**.md",
                    "doc/articles/**/toc.yml",
                    "doc/toc.yml",
                    "doc/*.md"
                ]
            }
        ],
        "dest": "doc/_DocumentationWebsite",
        "fileMetadataFiles": [],
        "globalMetadataFiles": [],
        "markdownEngineName": "markdig",
        "noLangKeyword": false,
        "overwrite": [
            {
                "files": [
                    "doc/apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "doc/_DocumentationWebsite/**"
                ]
            }
        ],
        "postProcessors": [],
        "resource": [
            {
                "files": []
            }
        ],
        "template": [
            "default"
        ]
    },
    "metadata": [
        {
            "dest": "doc/api",
            "src": [
                {
                    "files": [
                        "src/**/**.csproj"
                    ]
                }
            ]
        }
    ]
}